<%# Placeholder for order list %>
<% const orders = [
  {
    products: ['Product 1', 'Product 2', 'Product 3'],
    price: 200,
    address: '123 Kim Ma, Ba Dinh, Ha Noi' 
  },
  {
    products: ['Product 4', 'Product 5', 'Product 6'],
    price: 400,
    address: '123 Kim Ma, Ba Dinh, Ha Noi' 
  },
  {
    products: ['Product 7', 'Product 8', 'Product 9'],
    price: 700,

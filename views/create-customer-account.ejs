<%- include('partials/header.ejs') %>

<main class="d-flex justify-content-center">
  <div class="col-8">
    <h1>Create Account</h1>
    <form action="/customer" method="POST">
      <label for="username">User name:</label>
      <input type="text" name="username" class="form-control" placeholder="Username" required><br>

      <label for="password">Password: (Must contains at least one upper case letter, at least one lower case letter, at
        least one digit, at least one special letter in the set !@#$%^&*)</label>
      <input type="password" name="password" class="form-control" placeholder="Password" required><br>

      <label for="name">Name:</label>
      <input type="text" name="name" class="form-control" placeholder="Name" required></input><br>


      <label for="address">Address:</label>
      <input type="text" name="address" class="form-control" placeholder="Address" required><br>

      <label for="profile_picture">Upload Profile picture</label>
      <input type="file" id="image" name="image" value="profile_picture" required />


      <input class="btn btn-success w-100 my-3 py-2" type="submit" value="Create">
    </form>
  </div>
</main>

